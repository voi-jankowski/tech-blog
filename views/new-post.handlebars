<div class="page-title">
  <h4>Create New Post</h4>
  {{#if errorMessage}}
  <h5 class="user-alert">{{errorMessage}}</h5>
  {{/if}}
  <h5>Fill out the fields below and save the post.</h5>
</div>

<div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="create-post-title" type="text" />
            <label for="create-post-title">Post Title</label>
            <span class="helper-text" id="create-title-error"></span>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <textarea
              id="create-post-content"
              class="materialize-textarea"
            ></textarea>
            <label for="create-post-content">Content of your post</label>
            <span class="helper-text" id="create-content-error"></span>
          </div>
        </div>
      </form>
    </div>

  </div>
  <div class="modal-footer">
    <!-- Submit Button -->
    <button
      id="create-post-submit"
      class="every-btn create-btn btn waves-effect waves-light"
      type="submit"
      name="action"
    >
      Save the post
      <i class="material-icons right">save</i>
    </button>