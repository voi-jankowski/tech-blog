<!-- Create blog posts with cards -->

<div class="row">
  <div class="col s12 m12">
    <div class="card darken-1 hoverable">
      <div class="card-content white-text">
        <span class="card-title bolder">Post Title</span>
        <p>
          This is a very fun blog post about anything you need to know about web
          development.
        </p>
      </div>
      <div class="card-action">
        <ul class="collapsible popout">
          <li>
            <div class="collapsible-header">
              <i class="material-icons">comment</i>Comments
              <span class="badge">4</span>
            </div>
            <div class="collapsible-body">
              <p>This is a simple comment.</p>
              <a
                class="btn-floating right btn-small waves-effect waves-light pulse"
              ><i class="material-icons">add</i></a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>