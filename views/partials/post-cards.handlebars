<div class="card darken-1 hoverable">
  <div class="card-content">
    <h5 class="post-title bolder">{{title}}</h5>
    <br>
    <p>
      {{content}}
    </p>
    <h6 class="right-align">Posted by <span class="bolder">{{user.username}}</span></h6>
  </div>
  <div class="card-action">
    
        <ul class="collapsible popout">
            {{#if posts}}
                <li>
                    <div class="collapsible-header">
                    <i class="material-icons">comment</i>Comments
                    <span class="badge">{{comments.length}}</span>
                    </div>
                    {{#if comments}}
                    {{#each comments as |comment|}}
                    <div class="collapsible-body">
                    <p>{{comment_text}}</p>
                    <h6> - {{user.username}}</h6>

                    {{/each}}
                    {{else}}
                    <div class="collapsible-body">
                        <p>No comments yet!</p>
                    {{/if}}
                    <a
                        class="every-btn btn-floating right btn-small waves-effect waves-light pulse"
                    ><i class="material-icons">add</i></a>
                    </div>
                </li>
            {{else}}
                <li>
                  <div class="collapsible-header">
                    <i class="material-icons">edit</i>Edit your post
                  </div>
                  <div class="collapsible-body">
                     <!-- Alert info -->
                    <div class="row">
                      <h6 class="col s6">
                        Follow the link to edit your post <i class="material-icons right">arrow_forward</i>
                      </h6>
                      <!-- Edit button -->
                      <div class="col s6">
                        <a
                          class="every-btn btn waves-effect waves-light"
                          href="/edit/{{id}}"
                        >
                          Edit
                          <i class="material-icons right">edit</i>
                        </a>
                    </div>
                    
                  </div>
                </li>

                <li>
                  <div class="collapsible-header">
                    <i class="material-icons">delete</i>Delete your post
                  </div>
                  <div class="collapsible-body">
                    <!-- Alert info -->
                    <div class="row">
                      <h6 class="col s6">
                        Are you sure you want to delete this post?
                      </h6>
                      <!-- Delete button -->
                      <div class="col s6">
                        <button
                          class="every-btn btn waves-effect waves-light"
                          type="submit"
                          name="action"
                        >
                          Delete
                          <i class="material-icons right">delete</i>
                        </button>
                    </div>
                    
                  </div>
                </li>
            {{/if}}
        </ul>
    
  </div>
</div>