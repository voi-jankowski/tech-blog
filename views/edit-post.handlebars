<!-- Update form -->
<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <input value="{{title}}" id="update-post-title" type="text" />
        <label class="active" for="update-post-title">Post Title</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <textarea id="textarea1" class="materialize-textarea"></textarea>
        <label for="textarea1">Post Content</label>
      </div>
    </div>
  </form>
</div>
<!-- Submit Button -->
<button
  class="every-btn btn waves-effect waves-light"
  type="submit"
  name="action"
>
  Save the changes
  <i class="material-icons right">save</i>
</button>

<script>
  $("#textarea1").val("{{content}}");
</script>