<div class="page-title">
  <h4>Your Dashboard</h4>
  <h5>create, view and edit your posts</h5>
</div>

<!-- Create a button for adding new post -->

<a
  class="every-btn waves-effect waves-light btn-large right modal-trigger"
  href="#modal1"
><i class="material-icons left">create</i>Create New Post</a>

<!-- Modal for new post form -->

<div id="modal1" class="modal">
  <div class="modal-content">
    <!-- New Post form -->
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
            <input id="create-post-title" type="text" />
            <label for="create-post-title">Post Title</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <textarea
              id="create-post-textarea"
              class="materialize-textarea"
            ></textarea>
            <label for="create-post-textarea">Content of your post</label>
          </div>
        </div>
      </form>
    </div>

  </div>
  <div class="modal-footer">
    <!-- Submit Button -->
    <button
      class="every-btn create-btn btn waves-effect waves-light"
      type="submit"
      name="action"
    >
      Save the post
      <i class="material-icons right">save</i>
    </button>
  </div>
</div>

<br />
<div class="page-title">
  <h5>Your Posts</h5>
</div>

<!-- Create your blog posts with cards -->

<div class="row">
  <div class="col s12 m12">
    <div class="card darken-1 hoverable">
      <div class="card-content white-text">
        <span class="card-title bolder">Post Title</span>
        <p>
          This is a very fun blog post about anything you need to know about web
          development.
        </p>
      </div>
      <div class="card-action">
        <ul class="collapsible popout">

        </ul>
      </div>
    </div>
  </div>
</div>