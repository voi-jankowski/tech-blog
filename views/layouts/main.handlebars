<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/css/style.css" />
    <title>Tech-Tonic</title>
  </head>
  <body>
    <!-- Created navbar that is fixed on top and with dropdown menu on md or lower -->
    <div id="main-nav" class="navbar-fixed">
      <nav class="nav-extended">
        <div class="container">
          <div class="nav-wrapper">
            <a href="/" id="navbar-logo" class="brand-logo">
              <link /><img
                class="img"
                src="/assets/images/TechTonic_Side_2_Side_Y.png"
                alt="Blog Logo"
              />
            </a>
            <!-- Menu icon only appearing on mobiles and tablets. -->
            <a
              href="#"
              data-target="mobile-menu"
              class="dropdown-trigger hide-on-large-only"
            ><i class="material-icons">menu</i></a>

            <!-- Nav bar to the right only appearing of larger screens. -->
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <li><a href="/">Home</a></li>
              <li><a href="/dashboard">Dashboard</a></li>
              {{#if loggedIn}}
                <li><a href="/logout">Logout</a></li>
              {{else}}
                <li><a href="/signup">Signup</a></li>
                <li><a class="modal-trigger" href="#login-modal">Login</a></li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <!-- dropdown nav menu -->
    <ul id="mobile-menu" class="dropdown-content">
      <li><a href="/">Home</a></li>
      <li><a href="">Dashboard</a></li>
      {{#if loggedIn}}
        <li><a href="/logout">Logout</a></li>
      {{else}}
        <li><a href="/signup">Signup</a></li>
        <li><a class="modal-trigger" href="#login-modal">Login</a></li>
      {{/if}}
    </ul>

    <!-- Modal for logging in -->
    <div id="login-modal" class="modal">
      <div class="modal-content">
        <h4>Login to Your Account</h4>
        <h6 id="status400alert" class="user-alert"></h6>

        <div class="row">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input id="login-username" type="text" />
                <label for="login-username">Username</label>
                <span class="helper-text" id="login-username-error"></span>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <input id="login-password" type="password" class="validate" />
                <label for="login-password">Password</label>
                <span class="helper-text" id="login-password-error"></span>
              </div>
            </div>
          </form>
        </div>

      </div>
      <div class="modal-footer">
        <!-- Submit Button -->
        <button
          id="login-submit"
          class="every-btn create-btn btn waves-effect waves-light"
          type="submit"
          name="action"
        >
          Login
          <i class="material-icons right">exit_to_app</i>
        </button>
      </div>
    </div>

    <br />
    <main>
      {{{body}}}
    </main>

    <footer class="page-footer">
      <div class="footer-copyright">
        <div class="container">
          <a href="/" id="footer-logo" class="brand-logo">
            <link /><img
              class="img"
              src="/assets/images/TechTonic_Up_Down_Y.png"
              alt="Blog Logo"
            />
          </a>

          <a class="grey-text text-lighten-4 right" href="/dashboard">Enjoy
            blogging!</a>
        </div>
      </div>
    </footer>

    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"
    ></script>
    <script src="/js/index.js"></script>
  </body>
</html>